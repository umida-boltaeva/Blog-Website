<%- include("partials/header"); -%>

<h1 class="main-header">Compose</h1>
<form action="/compose" method="POST">
    <label class="comp-label" for="title">Title</label>
    <div class="input-group mb-3">
        <input type="text" name="postTitle" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
    </div>
    <div class="form-group">
        <label class="comp-label" for="exampleFormControlTextarea1">Post</label>
        <textarea class="form-control" name="postBody" id="exampleFormControlTextarea1" rows="5"></textarea>
      </div>
   
    <button class="btn btn-info" type="submit" name="composeButton" value="a">Publish</button>
</form>

